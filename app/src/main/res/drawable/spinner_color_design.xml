<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:color="@android:color/black">
        <shape android:shape="rectangle" >
            <corners
                android:radius="20dp"
                />
            <gradient
                android:angle="90"
                android:centerX="50%"
