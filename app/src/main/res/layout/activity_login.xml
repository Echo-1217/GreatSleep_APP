<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/appback2"
    android:orientation="vertical"
    tools:context=".LoginActivity">
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_marginTop="80dp"
        app:srcCompat="@drawable/loginpage" />
    <TextView
        android:id="@+id/great_sleep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Great Sleep"
        android:textSize="70dp"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        />
    <com.royrodriguez.transitionbutton.TransitionButton
        android:id="@+id/google_login"
        android:layout_width="200dp"
        android:layout_height="30dp"
        app:defaultColor="#4081EC"
        android:background="#4081EC"
        android:layout_marginTop="80dp"
        android:layout_gravity="center"
        android:text="Google登入"
        android:textColor="@color/white"
        android:textSize="18sp"/>
    <com.royrodriguez.transitionbutton.TransitionButton
        android:id="@+id/fb_login"
        android:layout_width="200dp"
        android:layout_height="30dp"
        app:defaultColor="#3b5998"
        android:layout_gravity="center"
        android:background="#3b5998"
        android:layout_marginTop="40dp"
        android:text="FaceBook登入"
        android:textSize="18sp"/>

</LinearLayout>